---
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<title>{title}</title>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/icono.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta
			name="description"
			content="Â¡Hola! Soy Mariano Bazan, desarrollador fullstack con experiencia. Este es mi portfolio donde encontraras todos mis proyectos en donde he trabajado. No dudes en contactarme si me necesitas"
		/>
		<meta
			name="keywords"
			content="mariano bazan, desarrollador fullstack, desarrollador junior, desarrollador semi senior, desarrollador web, desarrollador frontend, desarrollador react, desarrollador node, desarrollador jr"
		/>
		<meta property="og:title" content="Mariano Bazan | Software Developer">
		<meta property="og:description" content="Portfolio donde encontraras mi informacion laboral, proyectos y contacto.">
		<meta property="og:url" content="https://www.marianobazan.com">
		<meta property="og:image" content="https://static.vecteezy.com/system/resources/previews/007/559/606/non_2x/a-children-learning-coding-or-computer-programming-flat-illustration-coding-for-kids-basic-computer-programing-can-be-used-for-web-landing-page-social-media-promotion-etc-vector.jpg">
	</head>
	<body id="inicio" class="bg-gray-900 ">
		<Header/>
		<main>
			<slot />
		</main>
		<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js">
		</script>
		<script type="text/javascript">
			(function () {
				emailjs.init("-oSTqk-t5I-O7Bg7X");
			})();
		</script>
	</body>
	
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	* {
		min-width: 0;
	}
	*,
	*::before,
	*::after {
		box-sizing: border-box;
		list-style: none;
	}
	img,
	video,
	svg {
		display: block;
		height: auto;
		max-width: 100%;
	}
	body {
		margin: 0;
		min-height: 100dvh;
		color: white;
	}
	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		text-wrap: balance;
	}
	p {
		text-wrap: pretty;
	}
	a{
		text-decoration: none;
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		background-size: 224px;
		scroll-behavior: smooth;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
