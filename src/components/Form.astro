<form
        method="POST"
        action="https://formspree.io/f/xleqjjqj"
        class="mt-6 flex flex-col gap-2 items-center"
    >
        <div class="flex flex-col w-1/3">
            <label for="name">Nombre</label>
            <input
                class="bg-transparent border rounded ps-2 py-1 invalid:[&:not(:placeholder-shown):not(:focus)]:border-red-500"
                type="text"
                name="name"
                placeholder="Tu nombre"
                required
                pattern="^[a-zA-ZáéíóúÁÉÍÓÚ\\s]{3,50}$"
            />
        </div>
        <div class="flex flex-col w-1/3">
            <label for="email">Email</label>
            <input
                class="bg-transparent border rounded ps-2 py-1 invalid:[&:not(:placeholder-shown):not(:focus)]:border-red-500"
                type="email"
                name="email"
                placeholder="tu@correo.com"
                required
            />
        </div>
        <div class="flex flex-col w-1/3">
            <label for="text">Mensaje</label>
            <textarea
                class="bg-transparent border rounded ps-2 py-1 pb-4 invalid:[&:not(:placeholder-shown):not(:focus)]:border-red-500"
                name="text"
                placeholder="Tu mensaje"
                required></textarea>
        </div>
        <input type="hidden" name="_next" value="http://localhost:4321" />
        <button
            type="submit"
            class="mt-2 border rounded w-1/3 py-1 transition duration-300 ease-in-out hover:bg-slate-600">
            Enviar
            </button
        >
    </form>